<h3>Comments</h3>
<% @post.comments.each do |comment| %>
<div class="card card-body bg-light">
<p><strong><%= comment.username %></strong>: <%= comment.body %></p>

<%= button_to "[x]", comment.post, method: :delete, form: { data: { turbo_confirm: 'Are you sure?' } }, class: 'btn btn-danger' %>
</div>
<% end %>